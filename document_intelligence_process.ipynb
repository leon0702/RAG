    "# Import necessary libraries for Azure Form Recognizer, geometry handling, and PDF processing\n",
    "from azure.core.credentials import AzureKeyCredential\n",
    "from azure.ai.formrecognizer import DocumentAnalysisClient\n",
    "from shapely.geometry import Polygon\n",
    "import os\n",
    "import PyPDF2\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Total number of pages: 106\n"
     ]
    }
   ],
   "source": [
    "# Define endpoint and key for Azure Form Recognizer (replace with actual values)\n",
    "endpoint = \"\"\n",
    "key = \"\"\n",
    "\n",
    "# Initialize the DocumentAnalysisClient with the Azure endpoint and credentials\n",
    "document_analysis_client = DocumentAnalysisClient(\n",
    "    endpoint=endpoint, credential=AzureKeyCredential(key)\n",
    ")\n",
    "\n",
    "# Define the path to the PDF file\n",
    "pdf_path = 'D:\\\\Work\\\\Python_Code\\\\nke-10k-2023.pdf'\n",
    "\n",
    "# Open the PDF file and create a reader object\n",
    "with open(pdf_path, \"rb\") as pdf_file:\n",
    "    reader = PyPDF2.PdfReader(pdf_file)\n",
    "    # Get the total number of pages in the PDF\n",
    "    num_pages = len(reader.pages)\n",
    "print(f\"Total number of pages: {num_pages}\")\n",
    "\n",
    "# Generate an output filename based on the PDF filename\n",
    "base_name = os.path.splitext(os.path.basename(pdf_path))[0]  # Get the base name without extension\n",
    "dir_name = os.path.dirname(pdf_path)  # Get the directory of the PDF file\n",
    "output_file_name = f\"{base_name}.txt\"  # Create a .txt filename based on the PDF name\n",
    "\n",
    "# Initialize a string to store the final extracted content from the PDF\n",
    "document_content = ''\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Function to process a single page of the PDF using Azure Form Recognizer\n",
    "def process_page(page, pdf_path):\n",
    "    \"\"\"\n",
    "    Processes a specified page of the PDF using Azure's prebuilt layout model.\n",
    "    :param page: The page number to process (0-indexed).\n",
    "    :param pdf_path: The file path to the PDF document.\n",
    "    :return: The result of the analyzed document.\n",
    "    \"\"\"\n",
    "    with open(pdf_path, \"rb\") as f:\n",
    "        # Initiate an analysis request to Azure Form Recognizer's prebuilt-layout model\n",
    "        poller = document_analysis_client.begin_analyze_document(\n",
    "            \"prebuilt-layout\",  # Using the prebuilt layout model to analyze document structure\n",
    "            document=f,\n",
    "            locale=\"zh-Hant\",  # Setting locale for Traditional Chinese\n",
    "            pages=f\"{page+1}-{page+2}\"  # Specifying the page range (1-based indexing)\n",
    "        )\n",
    "        \n",
    "        # Retrieve the analysis result after the poller completes\n",
    "        result = poller.result()\n",
    "    \n",
    "    return result\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def process_document(result):\n",
    "    \"\"\"\n",
    "    Processes the result of an analyzed document, extracting and organizing \n",
    "    headings, table data, and page numbers.\n",
    "    :param result: The analyzed document result from Azure Form Recognizer.\n",
    "    :return: The concatenated content of the entire document as a string.\n",
    "    \"\"\"\n",
    "    # Initialize a variable to store all content\n",
    "    part_content = \"\"\n",
    "    # Initialize dictionaries to store headings, table headings, and page numbers by page\n",
    "    paragraphs_by_page = {}\n",
    "    page_numbers = {}\n",
    "\n",
    "    # Extract and store all headings, table headings, and page numbers\n",
    "    for paragraph in result.paragraphs:\n",
    "        page_number = paragraph.bounding_regions[0].page_number\n",
    "        if paragraph.role == \"sectionHeading\":\n",
    "            # If the page number is not yet in the dictionary, initialize it with an empty list\n",
    "            if page_number not in paragraphs_by_page:\n",
    "                paragraphs_by_page[page_number] = []\n",
    "            paragraphs_by_page[page_number].append(paragraph)\n",
    "        elif paragraph.role == \"pageNumber\":\n",
    "            # Store page numbers in a dictionary\n",
    "            page_numbers[page_number] = paragraph.content.strip()\n",
    "\n",
    "    # Iterate through each page in the result\n",
    "    for page in result.pages:\n",
    "        page_content = \"\"\n",
    "        table_polygons = []\n",
    "\n",
    "        # Identify the regions of tables on this page\n",
    "        for table in result.tables:\n",
    "            for region in table.bounding_regions:\n",
    "                if region.page_number == page.page_number:\n",
    "                    # Create a polygon for each table based on its bounding region\n",
    "                    polygon = Polygon([(p.x, p.y) for p in region.polygon])\n",
    "                    table_polygons.append(polygon)\n",
    "\n",
    "        # Flag to indicate if non-table text content exists on the page\n",
    "        text_content_exists = False\n",
    "        for line in page.lines:\n",
    "            line_polygon = Polygon([(p.x, p.y) for p in line.polygon])\n",
    "            # Check if the line is outside any table region\n",
    "            in_table = any(table_polygon.intersects(line_polygon) for table_polygon in table_polygons)\n",
    "            if not in_table:\n",
    "                # Append non-table text content to the page content\n",
    "                page_content += line.content + \"\\n\"\n",
    "                text_content_exists = True\n",
    "\n",
    "        # Check if there are headings or table headings on the page\n",
    "        if page.page_number in paragraphs_by_page:\n",
    "            for paragraph in paragraphs_by_page[page.page_number]:\n",
    "                # Insert section or table headings into the page content\n",
    "                page_content += f\"\\n{paragraph.content.strip()}\\n\"\n",
    "\n",
    "        # Process and format table content on the page\n",
    "        for table in result.tables:\n",
    "            for region in table.bounding_regions:\n",
    "                if region.page_number == page.page_number:\n",
    "                    # Initialize an empty table with the correct dimensions\n",
    "                    table_content = [['' for _ in range(table.column_count)] for _ in range(table.row_count)]\n",
    "                    for cell in table.cells:\n",
    "                        # Place cell content into the appropriate row and column\n",
    "                        table_content[cell.row_index][cell.column_index] = cell.content\n",
    "\n",
    "                    # Format table content as a Markdown-style table\n",
    "                    formatted_table = \"\"\n",
    "                    for row in table_content:\n",
    "                        formatted_table += \"| \" + \" | \".join(row) + \" |\\n\"\n",
    "\n",
    "                    # Insert formatted table content into the page content\n",
    "                    page_content += formatted_table\n",
    "\n",
    "        # Append the page number (if available) at the end of the page content\n",
    "        if page.page_number in page_numbers:\n",
    "            page_content += f\"\\nPage number: {page_numbers[page.page_number]}\\n\"\n",
    "\n",
    "        # Append the content of the page to the final document content\n",
    "        part_content += page_content\n",
    "    \n",
    "    return part_content"
   ]
  },
