   "source": [
    "# Initialize an empty string to store the final document content\n",
    "document_content = ''\n",
    "\n",
    "# Loop through pages in steps of 2 (e.g., pages 1-2, 3-4, 5-6, etc.)\n",
    "for page in range(0, 10, +2):\n", #Only do page 1-10
    "    print(f\"Processing page {page+1}~{page+2}...\")\n",
    "    # Process the specified page range using process_page function\n",
    "    result = process_page(page, pdf_path)\n",
    "    # Process the result to extract content and add it to document_content\n",
    "    document_content += process_document(result)\n",
    "\n",
    "# Write all the processed content to a text file\n",
    "with open(f\"{dir_name}\\\\{output_file_name}\", \"w\", encoding=\"utf-8\") as f:\n",
    "    f.write(document_content)\n",
    "\n",
    "print(f\"Content has been successfully written to {dir_name}\\\\{output_file_name}.\")\n"
   ]
  }
